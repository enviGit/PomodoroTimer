<Window x:Class="PomodoroTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PomodoroTimer.ViewModels"
        xmlns:conv="clr-namespace:PomodoroTimer.Converters"
        Title="Pomodoro" Height="650" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None" Icon="/appIcon.png">

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding TaskbarState}" ProgressValue="{Binding ProgressValue, Mode=OneWay}" />
    </Window.TaskbarItemInfo>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <conv:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <conv:BoolInverseConverter x:Key="BoolInverseConverter"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <conv:ModeColorConverter x:Key="ModeColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <SolidColorBrush x:Key="BgDark" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="BgCard" Color="#252537"/>
        <SolidColorBrush x:Key="Accent" Color="#FF6B6B"/>
        <SolidColorBrush x:Key="AccentHover" Color="#FF8787"/>
        <SolidColorBrush x:Key="TextMain" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#808080"/>

        <CubicEase x:Key="SmoothEase" EasingMode="EaseInOut"/>

        <Style TargetType="Button" x:Key="IconBtn">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="35">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="35" CenterY="35"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SmallBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TimerViewStyle" TargetType="StackPanel">
            <Setter Property="Visibility" Value="Visible"/>
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSettingsOpen}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 To="0" Duration="0:0:0.2" EasingFunction="{StaticResource SmoothEase}"/>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
                                </ObjectAnimationUsingKeyFrames>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 To="1" Duration="0:0:0.3" EasingFunction="{StaticResource SmoothEase}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SettingsViewStyle" TargetType="StackPanel">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Opacity" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSettingsOpen}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
                                </ObjectAnimationUsingKeyFrames>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 To="1" Duration="0:0:0.3" EasingFunction="{StaticResource SmoothEase}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 To="0" Duration="0:0:0.2" EasingFunction="{StaticResource SmoothEase}"/>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgDark}" CornerRadius="20" BorderThickness="1" BorderBrush="#333">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" MouseLeftButtonDown="Window_MouseDown" Background="Transparent" Margin="0,5,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="20,10">
                    <TextBlock Text="🍅" FontSize="18" Margin="0,0,10,0"/>
                    <TextBlock Text="POMODORO" Foreground="{StaticResource TextMuted}" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button Content="—" Click="Minimize_Click" Style="{StaticResource SmallBtn}" Width="35" Height="35" FontSize="16"/>
                    <Button Content="✕" Click="Close_Click" Style="{StaticResource SmallBtn}" Width="35" Height="35" FontSize="16" Foreground="#FF5555"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="{StaticResource BgCard}" CornerRadius="25" Margin="20,0,20,30" Padding="20" MinHeight="220">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.2" Color="Black"/>
                </Border.Effect>

                <Grid>
                    <Button Command="{Binding ToggleSettingsCommand}" 
                            IsEnabled="{Binding IsTimerRunning, Converter={StaticResource BoolInverseConverter}}" 
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Width="30" Height="30" Margin="0,-10,-10,0">
                        <Path Data="M19.43 12.98c.04-.32.07-.64.07-.98 0-.34-.03-.66-.07-.98l2.11-1.65c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.3-.61-.22l-2.49 1c-.52-.4-1.08-.73-1.69-.98l-.38-2.65C14.46 2.18 14.25 2 14 2h-4c-.25 0-.46.18-.49.42l-.38 2.65c-.61.25-1.17.59-1.69.98l-2.49-1c-.23-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64l2.11 1.65c-.04.32-.07.65-.07.98 0 .33.03.66.07.98l-2.11 1.65c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1c.52.4 1.08.73 1.69.98l.38 2.65c.03.24.24.42.49.42h4c.25 0 .46-.18.49-.42l.38-2.65c.61-.25 1.17-.59 1.69-.98l2.49 1c.23.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.65zM12 15.5c-1.93 0-3.5-1.57-3.5-3.5s1.57-3.5 3.5-3.5 3.5 1.57 3.5 3.5-1.57 3.5-3.5 3.5z" 
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Stretch="Uniform" Width="16" Height="16"/>

                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SmallBtn}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTimerRunning}" Value="True">
                                        <Setter Property="Opacity" Value="0.2"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSettingsOpen}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <StackPanel Style="{StaticResource TimerViewStyle}">

                        <TextBlock Text="{Binding IsBreakMode, Converter={StaticResource BoolToStringConverter}}" 
                                   Foreground="{StaticResource TextMuted}" 
                                   HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,15"/>

                        <TextBlock Text="{Binding TimerText}" 
                                   Foreground="{Binding IsBreakMode, Converter={StaticResource ModeColorConverter}}" 
                                   FontSize="85" FontWeight="Bold" 
                                   FontFamily="Segoe UI Light"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Margin="0,-5,0,5"/>

                        <ProgressBar Value="{Binding ProgressValue}" Maximum="{Binding ProgressMax}" 
                                     Height="6" BorderThickness="0" Background="#3E3E5E" 
                                     Foreground="{Binding IsBreakMode, Converter={StaticResource ModeColorConverter}}" 
                                     Margin="10,15,10,0">
                            <ProgressBar.Clip>
                                <RectangleGeometry Rect="0,0,280,6" RadiusX="3" RadiusY="3"/>
                            </ProgressBar.Clip>
                        </ProgressBar>
                    </StackPanel>

                    <StackPanel Style="{StaticResource SettingsViewStyle}">
                        <TextBlock Text="KONFIGURACJA" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                        <TextBlock Text="Czas Pracy (min)" Foreground="{StaticResource TextMuted}" FontSize="12" Margin="5,0" HorizontalAlignment="Center"/>
                        <Grid Margin="0,5,0,20" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Command="{Binding ChangeSettingCommand}" CommandParameter="Work:-5" 
                                    Content="−" Style="{StaticResource SmallBtn}" FontSize="20" Width="40" Height="40" Background="#333"/>

                            <TextBlock Grid.Column="1" Text="{Binding WorkMinutes}" Foreground="{StaticResource Accent}" 
                                       FontWeight="Bold" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Button Grid.Column="2" Command="{Binding ChangeSettingCommand}" CommandParameter="Work:5" 
                                    Content="+" Style="{StaticResource SmallBtn}" FontSize="20" Width="40" Height="40" Background="#333"/>
                        </Grid>

                        <TextBlock Text="Czas Przerwy (min)" Foreground="{StaticResource TextMuted}" FontSize="12" Margin="5,0" HorizontalAlignment="Center"/>
                        <Grid Margin="0,5,0,10" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Command="{Binding ChangeSettingCommand}" CommandParameter="Break:-1" 
                                    Content="−" Style="{StaticResource SmallBtn}" FontSize="20" Width="40" Height="40" Background="#333"/>

                            <TextBlock Grid.Column="1" Text="{Binding BreakMinutes}" Foreground="#4ECDC4" 
                                       FontWeight="Bold" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Button Grid.Column="2" Command="{Binding ChangeSettingCommand}" CommandParameter="Break:1" 
                                    Content="+" Style="{StaticResource SmallBtn}" FontSize="20" Width="40" Height="40" Background="#333"/>
                        </Grid>

                        <TextBlock Text="Zamknij ⚙, aby wrócić" Foreground="#555" FontSize="10" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="2" Margin="0,0,0,30" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding ToggleTimerCommand}" Style="{StaticResource IconBtn}">
                    <Grid>
                        <Path Data="M8 5v14l11-7z" Fill="White" Stretch="Uniform" Width="24" Height="24" Margin="4,0,0,0">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTimerRunning}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                        <Path Data="M6 19h4V5H6v14zm8-14v14h4V5h-4z" Fill="White" Stretch="Uniform" Width="24" Height="24">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTimerRunning}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Grid>
                </Button>

                <Button Grid.Column="2" Command="{Binding ResetCommand}" Style="{StaticResource IconBtn}" Background="#3E3E5E" Width="50" Height="50">
                    <Path Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" 
                          Fill="White" Stretch="Uniform" Width="18" Height="18"/>
                </Button>
            </Grid>

            <TextBlock Grid.Row="3" Text="Ostatnie Sesje" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold" Margin="25,0,0,10"/>

            <ListBox Grid.Row="3" ItemsSource="{Binding Sessions}" Background="Transparent" BorderThickness="0" Margin="20,0,20,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Sesja Pracy" Foreground="White" FontWeight="Bold" FontSize="13"/>
                                    <TextBlock Text="{Binding EndTimeString}" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding DurationString}" Foreground="{StaticResource Accent}" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>
                                <Button Grid.Column="2" Command="{Binding DataContext.DeleteSessionCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}" Style="{StaticResource SmallBtn}" Content="🗑" Foreground="#666" FontSize="14" Margin="5,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Grid.Row="4" Command="{Binding ClearAllCommand}" Content="Wyczyść Historię" 
                    Style="{StaticResource SmallBtn}" Foreground="{StaticResource Accent}" Margin="0,15,0,15"/>
        </Grid>
    </Border>
</Window>